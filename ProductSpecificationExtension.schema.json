{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Sh3rd3n/SchemaValidationTest/refs/heads/main/ProductSpecificationExtension.schema.json",
  "title": "ProductSpecification Extension",
  "description": "Extension schema for ProductSpecification with custom fields",
  "type": "object",
  "properties": {
    "productSpecCharacteristic_ext": {
      "type": "array",
      "description": "Extended product specification characteristics",
      "items": {
        "$ref": "#/definitions/ProductSpecCharacteristicExtension"
      }
    },
    "cloudesireProductVersionId": {
      "type": "integer",
      "description": "Cloudesire product version identifier"
    }
  },
  "definitions": {
    "ProductSpecCharacteristicExtension": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "cloudesireConfigurationParameterId": {
          "type": "string",
          "description": "Cloudesire configuration parameter ID"
        },
        "cloudesireBillingItemId": {
          "type": "string",
          "description": "Cloudesire billing item ID"
        },
        "productSpecCharacteristicValue": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductSpecCharacteristicValueExtension"
          }
        }
      }
    },
    "ProductSpecCharacteristicValueExtension": {
      "type": "object",
      "properties": {
        "isDefault": {
          "type": "boolean"
        },
        "value": {
          "oneOf": [
            {"type": "string"},
            {"type": "boolean"},
            {"type": "number"}
          ]
        },
        "unitOfMeasure": {
          "type": "string"
        },
        "valueFrom": {
          "type": "number"
        },
        "valueTo": {
          "type": "number"
        },
        "cloudesireBillingItemValueId": {
          "type": "string",
          "description": "Cloudesire billing item value ID"
        }
      }
    }
  }
}